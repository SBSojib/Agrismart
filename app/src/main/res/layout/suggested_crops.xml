<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/earthybackground">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@color/colorPrimaryDark"
        android:text="Suggested Crops"
        android:textSize="35dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-black"/>


    <Button
        android:id="@+id/suggestedCrops"
        android:text="Suggested Crops"
        android:textSize="24dp"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginVertical="255dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:fontFamily="sans-serif-black"/>

    <Button
        android:id="@+id/allCrops"
        android:text="All Crops"
        android:textSize="24dp"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginVertical="395dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:fontFamily="sans-serif-black"
        />



</RelativeLayout>