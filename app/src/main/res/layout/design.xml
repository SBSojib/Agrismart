<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/earthybackground">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:text="Caring Details"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-black"/>


    <Button
        android:id="@+id/fertilizingButton"
        android:text="Fertilizer"
        android:textSize="10dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginVertical="50dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="sans-serif-black"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    <Button
        android:id="@+id/insecticideButton"
        android:text="Insecticide"
        android:textSize="10dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginVertical="100dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="sans-serif-black"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <Button
        android:id="@+id/progressButton"
        android:text="Progress"
        android:textSize="10dp"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginVertical="150dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="sans-serif-black"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        />
    <Button
        android:id="@+id/marketpriceButon"
        android:text="Market Price"
        android:textSize="10dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginVertical="200dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="sans-serif-black"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <Button
        android:id="@+id/newtechButton"
        android:text="New Technology"
        android:textSize="10dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginVertical="250dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="sans-serif-black"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    />

    <View
        android:layout_width="1dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:background="#ffffff"
        />

    <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_marginTop="300dp"
        android:background="#ffffff"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="300dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:text="Description"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:layout_marginTop="51dp"
        android:layout_marginLeft="100dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:text="Weather"
        />



</RelativeLayout>