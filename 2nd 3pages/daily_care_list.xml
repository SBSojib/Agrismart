<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schemas.android.com/apk/res/android ">

    <TextView
        android:id="@+id/CropName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="45sp"
        android:text="Rice" />

    <TextView
        android:id="@+id/DailyCareList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CropName"
        android:layout_centerHorizontal="true"
        android:textSize="45sp"
        android:layout_marginTop="30dp"
        android:text="Daily Care List"/>

    <Button
        android:id="@+id/FertilizingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DailyCareList"
        android:layout_centerHorizontal="true"
        android:textSize="45sp"
        android:text="Fertilizing"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/InsecticideButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FertilizingButton"
        android:layout_centerHorizontal="true"
        android:textSize="45sp"
        android:text="Insecticide"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/ProgressButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/InsecticideButton"
        android:layout_centerHorizontal="true"
        android:textSize="45sp"
        android:text="Progress"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/NewTechButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ProgressButton"
        android:layout_centerHorizontal="true"
        android:textSize="45sp"
        android:text="New Tech"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/MarketPriceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NewTechButton"
        android:layout_centerHorizontal="true"
        android:textSize="45sp"
        android:text="Market Price"
        android:layout_marginTop="30dp" />


</RelativeLayout>